pipeline {
    agent none
    stages {
        stage("Unit Tests") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                 sh '''
                    # Use temp cache to avoid permission issues
                    npm config set cache /tmp/.npm-cache --global

                    # Print environment info for debugging
                    echo "Running as: $(id)"
                    echo "NPM cache: $(npm config get cache)"

                    npm ci
                    npm test
                    '''
            }
        }
        stage("Lint") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm run lint'
            }
        }
        stage("Build") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm run build'
                archiveArtifacts artifacts: 'dist/**', followSymlinks: false
            }
        }

    }
}
