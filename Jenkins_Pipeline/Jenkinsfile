pipeline {
    agent none
    stages {
        stage("Unit Tests") {
            agent {
                docker { image 'node:24-alpine' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh '''
                export HOME=/tmp
                mkdir -p $HOME/.npm-cache
                npm config set cache $HOME/.npm-cache --userconfig=$HOME/.npmrc
                npm ci
                npm test
                '''
            }
        }
        stage("Lint") {
            agent {
                docker { image 'node:24-alpine' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh '''
                export HOME=/tmp
                mkdir -p $HOME/.npm-cache
                npm config set cache $HOME/.npm-cache --userconfig=$HOME/.npmrc
                '''
                sh 'npm ci'
                sh 'npm run lint'
            }
        }
        stage("Build") {
            agent {
                docker { image 'node:24-alpine' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm run build'
                archiveArtifacts artifacts: 'dist/**', followSymlinks: false
            }
        }

    }
}

