pipeline {
    agent none
    stages {
        stage("Unit Tests") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm test --loglevel=verbose'
            }
        }
        stage("Lint") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm run lint'
            }
        }
        stage("Build") {
            agent {
                docker { image 'node:24-bullseye-slim' }
            }
            steps {
                git url: 'https://github.com/himavanthreddy94/tictactoe-devsecops-pipeline.git', branch: 'main'
                sh 'npm ci'
                sh 'npm run build'
                archiveArtifacts artifacts: 'dist/**', followSymlinks: false
            }
        }

    }
}
